env:
  es6: true
  node: true
  mocha: true

ecmaFeatures:
  arrowFunctions: true
  blockBindings: true
  forOf: true
  destructuring: true

rules:
  indent: [2, 2]
  quotes: [ 2, "single" ]
  brace-style: [2, "1tbs"]
  comma-style: [2, "last"]
  default-case: 2
  func-style: [2, "declaration"]
  guard-for-in: 2
  no-floating-decimal: 2
  no-nested-ternary: 2
  no-undefined: 2
  radix: 2
  space-after-function-name: [2, "never"]
  space-after-keywords: [2, "always"]
  space-before-blocks: 2
  spaced-line-comment: [2, "always", { exceptions: ["-"]}]
  strict: [2, "global"]
  valid-jsdoc: [2, { prefer: { "return": "returns"}}]
  wrap-iife: 2
  handle-callback-err: [2, "err"]
  no-new-require: 2
  no-sync: 2
  no-catch-shadow: 2
  no-shadow: 2
  no-shadow-restricted-names: 2
  no-undef: 2
  no-undefined: 2
  no-console: 2
  consistent-return: 2
  curly: [2, "all"]
  dot-notation: 2
  eqeqeq: [2, "smart"]
  no-alert: 2
  no-caller: 2
  no-var: 2
  no-extra-semi: 2
  semi: [2, "alwayss"]
  key-spacing: [2, { beforeColon: false, afterColon: true }]

